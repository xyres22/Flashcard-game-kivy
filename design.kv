            ripple_alpha: 0
            on_press:root.manager.current = 'login_screen'
            size_hint:0.1,0.1
            pos_hint:{'center_x':0.05,'center_y':0.97}
        MDLabel:
            text:'Please enter username and password!'
            pos_hint:{'center_x':.5,'center_y':.5}
            text_color:106/255, 90/255, 205/255, 1
            theme_text_color:'Custom'
            halign:'center'
        MDTextField:
            id:username
            line_color_focus: 215/255, 139/255, 230/255, 1
            hint_text:'Enter username'
