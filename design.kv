
#: import NoTransition kivy.uix.screenmanager.NoTransition

<WelcomeScreen>:

    MDFloatLayout:
        Image:
            source:'assets/welcome.gif'
            anim_delay:0
            allow_stretch:True
            anim_loop:1
<LoginScreen>:
    MDFloatLayout:
        md_bg_color:210/255, 210/255, 210/255,1
        MDCard:
            id:elev
            elevation:4
            size_hint:.85,.9
            md_bg_color:1,1,1,1
            pos_hint:{'center_x':.5,'center_y':.5}
            radius:[10]
        Image:
            source:'assets/login.jpg'
            size_hint:.6,.5
            pos_hint:{'center_x':.5,'center_y':.78}
        MDTextField:
            id: username
            hint_text: 'Username'
            write_tab:False
            multiline:False
            size_hint:.75,.12
            pos_hint:{'center_x':.5,'center_y':.54}
            icon_left:'account'
            helper_text_mode: "on_error"
        MDTextField:
            id:password
            password:True
            hint_text: 'Password'
            write_tab:False
            multiline:False
            size_hint:.75,.12
            pos_hint:{'center_x':.5,'center_y':.43}
            icon_left:'key-variant'
            helper_text_mode: "on_error"
        MDIconButton:
            icon:'eye-off'
            ripple_alpha: 0
            pos_hint:{'center_y':.43}
            pos:password.width - self.width + dp(45), 0
            theme_text_color:'Hint'
            on_release:
                self.icon = 'eye' if self.icon == 'eye-off' else 'eye-off'
                password.password = False if password.password is True else True
        MDTextButton:
            font_size:'12sp'
            text:'Forgot your password?'
            on_press:
                root.get_pw()
                root.manager.transition.direction = 'left'
                root.manager.transition = NoTransition()
            pos_hint:{'center_x':0.5,'center_y':0.37}
            font_name:'assets/Poppins-Regular.ttf'
            theme_text_color:'Custom'
            text_color: 246/255, 135/255, 177/255, 1
        MDRoundFlatIconButton:
            text:'Login'
            icon:'login'
            on_press:root.log_in(root.ids.username.text, root.ids.password.text)
            size_hint:0.335,.07
            pos_hint:{'center_x':0.5,'center_y':0.275}
        MDLabel:
            text:'or'
            halign:"center"
            pos_hint:{'center_x':.5,'center_y':0.2}
        MDFloatLayout:
            md_bg_color: rgba(178,178,178,255)
            size_hint:.3, .002
            pos_hint:{'center_x':0.3,'center_y':0.198}
        MDFloatLayout:
            md_bg_color: rgba(178,178,178,255)
            size_hint:.3, .002
            pos_hint:{'center_x':0.7,'center_y':0.198}
        MDRoundFlatIconButton:
            icon:'sign-in'
            text:'Sign Up'
            on_press:root.sign_up()
            size_hint:0.335,.07
            pos_hint:{'center_x':.5,'center_y':0.125}
            on_press:root.sign_up()

<SignUpScreen>:
    MDFloatLayout:
        md_bg_color:255/255,255/255,255/255,1
        Image:
            source:'assets/register.jpg'
            size_hint:1,1
            pos_hint:{'center_x':.5,'center_y':.75}
        MDIconButton:
