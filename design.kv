<EditWords>:
    
    MDGridLayout:
        cols:1
        MDTopAppBar:
            id: topbarname
            title: ""
            elevation:2
            left_action_items:[['arrow-left', lambda x: root.back()]]
            right_action_items:[['minus', lambda x:root.show_alert_dialog()],['border-color', lambda x:root.change_name(root.ids.topbarname.title)]]
        MDBoxLayout: 
            ScrollView:
                id:refresh_layout
                size_hint:1,1
                GridLayout:
                    id:words
                    cols:1
                    spacing:15,15
                    padding:15,15
                    size_hint_y:None
                    height: self.minimum_height
        MDBottomAppBar:
            MDTopAppBar:
                md_bg_bottom_color: 0, 1, 0, 1
                icon_color: self.md_bg_bottom_color
                icon:'plus'
                type:'bottom'
                title:'test'
                mode: "end"
                on_action_button: root.add_words_pop()

<EditFolder>:
    MDGridLayout:
        cols:1
        id:editfolder
        MDTopAppBar:
            title: "Folders"
            elevation:2
            right_action_items:[['file-plus', lambda x:root.add()]]
            left_action_items:[['arrow-left', lambda x: root.back()]]
        MDBoxLayout: 
            MDScrollViewRefreshLayout:
                id:refresh_layout
                refresh_callback: root.refresh_callback
                root_layout: root
                size_hint:1,1
                GridLayout:
                    id:box
                    cols:2
                    spacing:15,15
                    padding:15,15
                    size_hint_y:None
                    height: self.minimum_height
                
                
                

                

